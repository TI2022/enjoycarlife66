<div class="container-login">
  <h1>アカウント編集</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :kana %><br />
      <%= f.text_field :kana, autofocus: true, autocomplete: "kana", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="sex-field">
      <%= f.label :Sex %><br />
      <%= f.label :male  %>
      <%= f.radio_button :sex, :male %>
      <%= f.label :female  %>
      <%= f.radio_button :sex, :female %>
    </div><br />

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(変更する場合は入力してください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %> <i>(変更する場合は入力してください)</i><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <%= link_to 'アカウント削除', registration_path(resource_name), data: {confirm: t('本当によろしいですか？')}, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>
</div>

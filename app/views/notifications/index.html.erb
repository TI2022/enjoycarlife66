<div class="container">
  <div>
    <h1>お知らせ一覧</h1>
  </div>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>記事タイトル</th>
        <th>表示状態</th>
        <th>投稿者</th>
        <th>投稿日</th>
      </tr>
    </thead>
    <% @notifications.each do |content| %>
    <tbody>
      <tr>
        <td style="width:50%">
          <%= link_to truncate(content.title, length: 20), notification_path(content.id) %>
        </td>
        <td style="width:15%">
          <% if content.display_flag.trust %>
            <p class="btn btn-success">表示中</p>
          <% else %>
            <p class="btn btn-secondary">非表示中</p>
          <% end %>
        </td>
        <td style="width:20%">
          <%= content.staff_id %>
        </td>
        <td style="width:15">
          <%= content.created_at.strftime("%Y年%m月%d日") %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate(@notifications) %>
  <div class="text-center">
    <%= link_to "戻る", staffs_path %>
  </div>

</div>

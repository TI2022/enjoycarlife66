<div class="slider-wrap">
  <div class="slider-main">
    <div><%= link_to image_tag("/slide_01pc.jpeg"), reservations_path, 'data-turbolinks': false %></div>
    <div><%= link_to image_tag("/slide_02pc.jpeg"), reservations_path, 'data-turbolinks': false %></div>
    <div><%= link_to image_tag("/slide_03pc.jpeg"), reservations_path, 'data-turbolinks': false %></div>

<p>
  <%= link_to 'ホーム', root_url, class: "link-gray" %> ＞
  <%= link_to 'スタッフページ', staffs_account_path, class: "link-gray" %> ＞
  <%= link_to 'スタッフ一覧', staffs_index_path, class: "link-gray" %>
  ＞ スタッフ情報の編集
</p>


<div class="container-login">
  <h1 class="center">スタッフ情報の編集</h1>

  <%= form_with(model: @staff, url: staffs_admin_update_path(@staff), local: true) do |f| %>
  
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-sm btn-outline-dark" %>
    </div>
  <% end %>
</div>
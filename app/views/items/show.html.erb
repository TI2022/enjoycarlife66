<%= link_to '商品一覧に戻る', items_path %>
<div class="center container-login">
<h1>商品詳細</h1>
<table>
  <thead>
    <tr>
      <th colspan="4"><%= image_tag(@item.image_url, width: 500) if @item.image? %></th>
    </tr>
    <tr>
      <th>商品名</th>
      <th>価格(税込)</th>
      <th>在庫数</th>
      <th>詳細</th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td><%= @item.name %></td>
      <td><%= @item.price %></td>
      <td><%= @item.stock %></td>
      <td><%= @item.description %></td>
    </tr>
  </tbody>
</table>
</div>

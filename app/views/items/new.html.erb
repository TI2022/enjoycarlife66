<%= link_to '商品一覧に戻る', items_path %>
<div class="center container-login">
<h1>新規商品の登録</h1>
  <%= form_with(model: @item, url: items_path(@item), local: true, method: :post) do |f| %>
    <%= render partial: 'shared/error_messages', locals: { object: @item } %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>
    <div class="form-group">
      <%= f.label :stock %>
      <%= f.number_field :stock %>
    </div>
    <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>
    <div class="form-group">
    <%= f.submit "商品登録", class: "btn btn-md btn-primary" %>
    <%= link_to 'キャンセル', items_path %>
    </div>
  <% end %>
</div>
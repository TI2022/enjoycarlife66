<p>
  <%= link_to 'ホーム', root_url, class: "link-gray" %> ＞
  <%= link_to '店舗のご案内', stores_path, class: "link-gray" %> ＞
  <%= @store.name %>
</p>
<p></p>

<div class="container">
  <div class="store-show-content-wrapper">
    
    <div class="store-show-content-image">
      <% if @store.image? %>
        <%= image_tag(@store.image.url, width: "100%", class: "image-border") %>
      <% else %>
        <%= image_tag("/no_image2.png", width: "100%", class: "image-border") %>
      <% end %>
    </div>

    <div>
      <ul>
        <li>店舗名:</li>
        <li><%= @store.name %></li>
        <p></p>
        <li>住所:</li>
        <li><%= @store.address %></li>
        <p></p>
        <li>電話番号:</li>
        <li><%= @store.phone %></li>
        <p></p>
        <li>メール:</li>
        <li><%= @store.email %></li>
        <p></p>
        <li>営業時間:</li>
        <% if @store.opening_time.present? && @store.closing_time.present? %>
          <li><%= @store.opening_time.strftime("%H:%M") %> から <%= @store.closing_time.strftime("%H:%M") %> まで</li>
        <% end %>
        <p></p>
        <li>ラストオーダー:</li>
        <% if @store.last_order_time.present? %>
          <li><%= @store.last_order_time.strftime("%H:%M") %> まで受付</li>
        <% end %>
        <p></p>
        <li>定休日:</li>
        <li><%= @store.non_business_day %></li>
        <p></p>
        <li>稼働スタッフ数:</li>
        <li><%= @store.working_staff %> 名</li>
        <p></p>
        <li>店舗詳細:</li>
        <li><%= @store.description %></li>
        <p></p>
      </ul>
    </div>

  </div>
</div>
